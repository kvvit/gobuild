#!groovy
properties([disableConcurrentBuilds()])

pipeline {
  agent {
        label 'gobuild'
        }
  options {
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '10'))
        timestamps()
    }
  stages {
    stage("Build") {
      steps {
        sh 'hostname'
        sh 'export PATH=$PATH:/usr/local/go/bin'
        sh 'go version'
        sh 'go build main.go'
      }
    }
    stage("Test") {
      steps {
        sh 'go test'
      }
    }
  }
}
